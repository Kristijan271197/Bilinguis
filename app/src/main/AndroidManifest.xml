<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.invictastudios.bilinguis">
    <!-- Include required permissions for Google Mobile Ads to run. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".TestSelection" />
        <activity android:name=".Reading.ReadingSectionSelected" />
        <activity android:name=".Reading.Reading" />
        <activity android:name=".Writing.Writing" />
        <activity
            android:name=".Tests"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Exercises"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Grammar.GrammarWritingExercise"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".Grammar.GrammarMultipleChoiceExercise" />
        <activity android:name=".Grammar.GrammarSectionSelected" />
        <activity android:name=".Grammar.Grammar" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-4701446273186664~8537561530" />

        <activity android:name=".Vocabulary.VocabularySectionSelected" />
        <activity android:name=".Vocabulary.Vocabulary" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>