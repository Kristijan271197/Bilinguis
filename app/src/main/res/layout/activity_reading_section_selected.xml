<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6C63FF"
    android:orientation="vertical"
    tools:context=".Reading.ReadingSectionSelected">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/open_sans"
                android:gravity="start"
                android:lineSpacingExtra="4dp"
                android:padding="16dp"
                android:text="First listen to the text"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/play_text_button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/sound_icon_two" />


            <TextView
                android:id="@+id/exercise_one_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_one"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/open_sans"
                android:gravity="start"
                android:lineSpacingExtra="4dp"
                android:padding="16dp"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/exercise_one_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/exercise_one_question"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/open_sans"
                android:gravity="start"
                android:lineSpacingExtra="4dp"
                android:padding="16dp"
                android:text="Show Answers"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/exercise_one_answer"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/open_sans"
                android:gravity="start"
                android:lineSpacingExtra="4dp"
                android:padding="16dp"
                android:text="Read the text"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/reading_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_two"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/open_sans"
                android:gravity="start"
                android:lineSpacingExtra="4dp"
                android:padding="16dp"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/exercise_two_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reading_text_view"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/open_sans"
                android:gravity="start"
                android:lineSpacingExtra="4dp"
                android:padding="16dp"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/exercise_two_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/exercise_two_question"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/open_sans"
                android:gravity="start"
                android:lineSpacingExtra="4dp"
                android:padding="16dp"
                android:text="Show Answers"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />


        </RelativeLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/adView_container_reading_section_selected"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>
</LinearLayout>