<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6C63FF"
    tools:context=".Grammar.ImageGrammarFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/first_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:gravity="start"
                android:lineSpacingExtra="4dp"
                android:padding="16dp"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/first_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first_text_view"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/first_linear_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corners"
                    android:fontFamily="@font/open_sans"
                    android:gravity="start"
                    android:lineSpacingExtra="4dp"
                    android:padding="16dp"
                    android:text=""
                    android:textColor="#6C63FF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/second_linear_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corners"
                    android:fontFamily="@font/open_sans"
                    android:gravity="start"
                    android:lineSpacingExtra="4dp"
                    android:padding="16dp"
                    android:text=""
                    android:textColor="#6C63FF"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/second_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/first_linear_layout"
                android:fontFamily="@font/open_sans"
                android:gravity="start"
                android:lineSpacingExtra="4dp"
                android:padding="16dp"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/second_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/second_text_view"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/third_linear_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corners"
                    android:fontFamily="@font/open_sans"
                    android:gravity="start"
                    android:lineSpacingExtra="4dp"
                    android:padding="16dp"
                    android:text=""
                    android:textColor="#6C63FF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/fourth_linear_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corners"
                    android:fontFamily="@font/open_sans"
                    android:gravity="start"
                    android:lineSpacingExtra="4dp"
                    android:padding="16dp"
                    android:text=""
                    android:textColor="#6C63FF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />
            </LinearLayout>

            <TextView
                android:id="@+id/third_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/second_linear_layout"
                android:fontFamily="@font/open_sans"
                android:gravity="start"
                android:lineSpacingExtra="4dp"
                android:padding="16dp"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/third_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/third_text_view"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fifth_linear_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corners"
                    android:fontFamily="@font/open_sans"
                    android:gravity="start"
                    android:lineSpacingExtra="4dp"
                    android:padding="16dp"
                    android:text=""
                    android:textColor="#6C63FF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/sixth_linear_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corners"
                    android:fontFamily="@font/open_sans"
                    android:gravity="start"
                    android:lineSpacingExtra="4dp"
                    android:padding="16dp"
                    android:text=""
                    android:textColor="#6C63FF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />
            </LinearLayout>

            <Button
                android:id="@+id/exercise_one_button_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/third_linear_layout"
                android:layout_margin="16dp"
                android:background="@drawable/rounded_corners"
                android:fontFamily="@font/roboto_black"
                android:text="Exercise 1"
                android:textColor="#6C63FF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/exercise_two_button_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/exercise_one_button_image"
                android:layout_margin="16dp"
                android:background="@drawable/rounded_corners"
                android:fontFamily="@font/roboto_black"
                android:text="Exercise 2"
                android:textColor="#6C63FF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/exercise_three_button_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/exercise_two_button_image"
                android:layout_margin="16dp"
                android:background="@drawable/rounded_corners"
                android:fontFamily="@font/roboto_black"
                android:text="Exercise 3"
                android:textColor="#6C63FF"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </ScrollView>

</FrameLayout>